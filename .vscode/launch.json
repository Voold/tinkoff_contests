{
    // Используйте IntelliSense, чтобы узнать о возможных атрибутах.
    // Наведите указатель мыши, чтобы просмотреть описания существующих атрибутов.
    // Для получения дополнительной информации посетите: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Debug with Input",
            "program": "${file}", 
            "console": "integratedTerminal",  // Или "externalTerminal", если хотите видеть ввод/вывод в отдельном окне
            "internalConsoleOptions": "neverOpen",
            "args": [],
            "runtimeArgs": [],
            "env": {},
            "cwd": "${workspaceFolder}",
            //"preLaunchTask": null,
            "outFiles": [],
            //"port": 9229,
            "autoAttachChildProcesses": true,
            "skipFiles": [],
            "resolveSourceMapLocations": null,
            "smartStep": false,
            "sourceMaps": true,
            "stopOnEntry": false,
            "trace": false,
            //"useWSProtocol": true,
            "showAsyncStacks": true,
            //"listLoadedScripts": false,
            //"__sessionId": "e55a442f-e26f-4708-964c-5687b4f8d81c"
        },
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program currentt",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}"
        }
    ]
}